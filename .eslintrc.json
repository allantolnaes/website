{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",  // TypeScript rules
    "prettier"                                // Disables ESLint rules that conflict with Prettier
  ],
  "parser": "@typescript-eslint/parser",       // Specifies ESLint to use TypeScript parser
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",                      // TypeScript plugin
    "prettier"                                 // Prettier plugin
  ],
  "rules": {
    "prettier/prettier": "error",              // Shows Prettier formatting issues as ESLint errors
    "@typescript-eslint/no-unused-vars": "warn",  // Example TypeScript-specific rule
    "@typescript-eslint/explicit-module-boundary-types": "off" // Example: Turning off a specific rule
  }
}
